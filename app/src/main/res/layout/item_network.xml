<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivNetworkContact"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ty"
        android:visibility="visible"
        />

    <TextView
        android:id="@+id/tvNetworkContactFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivNetworkContact"/>

    <TextView
        android:id="@+id/tvNetworkContactLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvNetworkContactFirstName"
        android:layout_marginLeft="2dp"/>

</RelativeLayout>