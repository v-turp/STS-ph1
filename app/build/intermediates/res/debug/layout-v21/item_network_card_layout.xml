<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_900">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivContactPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/amber_400"
                android:src="@drawable/default_avatar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:background="@color/green_400"
                android:layout_below="@+id/ivContactPhoto">

                <ImageView
                    android:id="@+id/ivMusic"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_400"
                    android:src="@drawable/ic_audiotrack_black_24dp"/>

                <ImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/purple_400"
                    android:src="@drawable/ic_local_movies_black_24dp"/>

                <ImageView
                    android:id="@+id/ivContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_400"
                    android:src="@drawable/ic_account_circle_black_24dp"/>

                <ImageView
                    android:id="@+id/ivBio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/cayan_900"
                    android:src="@drawable/ic_subject_black_24dp"/>
            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
